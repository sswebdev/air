<h1>New Flight</h1>


<%= form_tag(flights_url, method: 'post') do %>


  <div>
    <%= label_tag :departs_at %><br />
    <%= datetime_select_tag :departs_at %>
  </div>

  <div>
    <%= label_tag :departure_code %><br />
    <%= text_field_tag :departure_code %>
  </div>

  <div>
    <%= label_tag :arrival_code %><br />
    <%= text_field_tag :arrival_code %>
  </div>

  <div>
    <%= label_tag :seats %><br />
    <%= number_field_tag :seats %>
  </div>


  <div>
    <%= submit_tag "Create Flight" %>
  </div>
<% end %>
